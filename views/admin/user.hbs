<!--admin-->
<div class="main-hd">
    <h2>用户管理</h2>
</div>

<div class="section">
    <table class="tb-data">
        <thead>
        <tr>
            <th>姓名</th>
            <th>工号</th>
            <th>邮箱</th>
            <th>岗位</th>
            <th>角色</th>
            <th>状态</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {{#each data.users}}
        <tr>
            <td>{{ name }}</td>
            <td>{{ workNumber }}</td>
            <td>{{ email }}</td>
            <td>{{ group }}</td>
            <td>{{ role }}</td>
            <td class="td-ope">
                {{#if state}}
                    <span class="green">启用</span>
                    <a href="">禁用</a>
                {{^}}
                    <span class="red">禁用</span>
                    <a href="">启用</a>
                {{/if}}
            </td>
            <td class="td-ope">
                <a href="">删除</a><a href="">编辑</a>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<div class="section">
    <div class="sub-hd">
        <h3>新增用户</h3>
    </div>
    <form data-bind="submit: submit">
    <table class="tb-form">
        <colgroup>
            <col width="20%"/>
            <col width="80%"/>
        </colgroup>
        <tbody>
        <tr>
            <th>姓名</th>
            <td>
                <div class="form-fluid">
                    <input class="txt" type="text" name="" id="" data-bind="value: name"/>
                    <div class="error" data-bind="visible: name.hasError, validationMessage: name"></div>
                </div>
            </td>
        </tr>
        <tr>
            <th>工号</th>
            <td>
                <div class="form-fluid">
                    <input class="txt" type="text" name="" id="" data-bind="value: workNumber"/>
                    <div class="error" data-bind="validationMessage: workNumber"></div>
                </div>
            </td>
        </tr>
        <tr>
            <th>邮箱</th>
            <td>
                <div class="form-fluid">
                    <input class="txt" type="text" name="" id="" data-bind="value: email"/>
                    <div class="error" data-bind="validationMessage: email"></div>
                </div>
            </td>
        </tr>
        <tr>
            <th>岗位</th>
            <td>
                <div class="choose-group" data-bind="foreach: posts">
                    <label><input class="chb" type="checkbox" name="" id="" value="" data-bind="checked: posts, value: _id"/></label>
                </div>
            </td>
        </tr>
        <tr>
            <th>角色</th>
            <td>
                <select name="" id="" data-bind="value: role, options: roleOptions, optionsCaption: '请选择' "></select>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="submit"><button type="submit" class="btn btn-primary">提交</button></div>
    </form>
</div>
{{#extend 'script'}}
    {{module 'admin/user'}}
{{/extend}}