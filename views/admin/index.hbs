<!--admin-->
<div class="main-hd">
    <h2>用户管理</h2>
</div>

<div class="section">
    <table class="tb-data">
        <thead>
        <tr>
            <th>姓名</th>
            <th>工号</th>
            <th>邮箱</th>
            <th>职位</th>
            <th>角色</th>
            <th>状态</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        {{#each data.users}}
        <tr>
            <td>{{ name }}</td>
            <td>{{ workNumber }}</td>
            <td>{{ email }}</td>
            <td>{{ group }}</td>
            <td>{{ role }}</td>
            <td>
                {{#if state}}
                    <span class="green">启用</span>
                {{^}}
                    <span class="red">禁用</span>
                {{/if}}

            </td>
            <td></td>
        </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<div class="section">
    <div class="sub-hd">
        <h3>新增用户</h3>
    </div>
    <table class="tb-form">
        <colgroup>
            <col width="20%"/>
            <col width="80%"/>
        </colgroup>
        <tbody>
        <tr>
            <th>姓名</th>
            <td><input class="txt" type="text" name="" id=""/></td>
        </tr>
        <tr>
            <th>工号</th>
            <td><input class="txt" type="text" name="" id=""/></td>
        </tr>
        <tr>
            <th>邮箱</th>
            <td><input class="txt" type="text" name="" id=""/></td>
        </tr>
        <tr>
            <th>职位</th>
            <td>
                <select name="" id="">
                    <option value="">请选择</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>角色</th>
            <td>
                <select name="" id="">
                    <option value="">普通用户</option>
                    <option value="">管理员</option>
                </select>
            </td>
        </tr>
        </tbody>
    </table>
    <div class="submit"><span class="btn btn-primary">提交</span></div>
</div>